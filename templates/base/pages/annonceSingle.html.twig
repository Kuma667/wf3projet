                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-xs-12">

                    <aside class="details-sidebar">
                        <div class="widget">
                            <h4 class="widget-title">Annonce publiée par</h4>
                            <div class="agent-inner">
                                <div class="agent-title">
<!--
                                    <div class="agent-photo">
                                        <a href="#"><img src="assets/img/productinfo/agent.jpg" alt=""></a>
                                    </div>
-->
                                    <div class="agent-details" style="margin-left:0px">
                                        <h3>{{ annonce.user.prenom }}</h3>
                                        <span><i class="lni-phone-handset"></i>{{ annonce.user.numtel }}</span> <br>
										<span><i class="fa fa-envelope"></i> {{ annonce.user.email }} </span>
                                    </div>
                                </div>
                                <button class="btn btn-common fullwidth mt-4" data-toggle="modal" data-target="#contactModal">Contacter le vendeur</button>
                            </div>
                        </div>
                    </aside>
                </div>
				<div class="modal fade" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="titreModal" aria-hidden="true">
				  <div class="modal-dialog" role="document">
					<div class="modal-content">
					  <div class="modal-header">
						<h5 class="modal-title" id="titreModal">Contacter le vendeur</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						  <span aria-hidden="true">&times;</span>
						</button>
					  </div>
					  <div class="modal-body">
						{% for label, messages in app.flashes %}
							{% for message in messages %}
								<div class="alert alert-{{ label }}">
									{{ message }}
								</div>
							{% endfor %}
						{% endfor %}
							<form method="POST" action="{{ path('contactPro') }}">
								<input type="hidden" value="{{ annonce.user.email }}" name="userMail"> 
								<div class="row">
									<div class="col-md-6">
										<label for="nom">Nom</label>
										<input name="nom" type="text" class="form-control mb-3" placeholder="Nom">
									</div>
									<div class="col-md-6">
										<label for="prenom">Prénom</label>
										<input name="prenom" type="text" class="form-control mb-3" placeholder="Prénom">
									</div>
								</div>
								<div class="row">
									<div class="col-md-6">
										<label for="email">Votre email</label>
										<input name="email" type="email" class="form-control mb-3" placeholder="Email">
									</div>
									<div class="col-md-6">
										<label for="sujet">Sujet</label>
										<input name="sujet" type="text" class="form-control mb-3" placeholder="Sujet">
									</div>
								</div>
								<div class="row">
									<div class="col-md-12">
										<label for="message">Votre message</label>
										<textarea name="message" class="form-control mb-3" placeholder="Message"></textarea>
									</div>
								</div>
								<input type="hidden" name="formEnvoi">
								<button type="submit" class="btn btn-success form-control">Envoyer</button>
							</form>
					  </div>
					  <div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
<!--						<button type="button" class="btn btn-primary">Envoyer</button>-->
					  </div>
					</div>
				  </div>
				</div>
