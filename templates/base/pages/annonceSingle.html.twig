									<span class="price">{{ annonce.prix }}€</span>
								</div>
							{% endfor %}
                        </div>
                    </div>
                    <div class="details-box">
                        <div class="ads-details-info">
                            <h2> {{ annonce.titre }} </h2>
                            <div class="details-meta">
