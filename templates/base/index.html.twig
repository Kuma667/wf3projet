{% extends "base.html.twig" %}

{% block title %}Alsannonces - Accueil{% endblock %}

{% block body %}
	
	<div id="hero-area">
			<div class="overlay"></div>
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-12 col-lg-9 col-xs-12 text-center">
						<div class="contents">
							<h1 class="head-title">Bienvenue sur le plus grand <br><span class="year" style="color: #eb5160">site d'annonces d'Alsace</span></h1>
							<p>Achetez et vendez de tout. Des voitures d'occasion, téléphones portables, ordinateurs.. ou recherchez des biens, emplois et bien plus encore.</p>
							{% include '/_partials/searchBar.html.twig' %}
						</div>
					</div>
				</div>
			</div>
		</div>

	</header>
	
	<section class="featured section-padding">
		<div class="container">
			<h1 class="section-title">Les dernières annonces</h1>
			<div class="row">
				 {% for annonce in annonces %}
					<div class="col-xs-6 col-sm-6 col-md-6 col-lg-4">
						<div class="featured-box">
							<figure>
								<div class="icon">
									<span class="bg-green"><i class="lni-heart"></i></span>
									<span><i class="lni-bookmark"></i></span>
								</div>
								<a href="{{ path('annonceSingle', {id: annonce.id}) }}"><img class="img-fluid" src="{{ asset(annonce.image) }}" alt="" style="max-height:200px;max-width:300px"></a>
							</figure>
							<div class="feature-content">
								<div class="product">
									<a href="#">{{ annonce.categorie.nom }}</a>
								</div>
								<h4><a href="{{ path('annonceSingle', {id: annonce.id}) }}">{{ annonce.titre }}</a></h4>
								<div class="meta-tag">
									<span>
										<a href="#"><i class="lni-user"></i> {{ annonce.user.prenom }}</a>
									</span>
									<span>
										<a href="#"><i class="lni-map-marker"></i> {{ annonce.ville }}</a>
									</span>
								</div>
								<p class="dsc"> {{ annonce.description }} </p>
								<div class="listing-bottom">
									<h3 class="price float-left" style="margin-right:15px">{{ annonce.prix }}€</h3>
									<a href="{{ path('annonceSingle', {id: annonce.id}) }}" class="btn btn-common float-right" style="float:right">Voir les détails</a>
								</div>
							</div>
						</div>
					</div>
				 {% endfor %}
			</div>
		</div>
	</section>
	
	<section class="works section-padding">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<h3 class="section-title">Comment ça fonctionne?</h3>
				</div>
				<div class="col-lg-4 col-md-4 col-xs-12">
					<div class="works-item">
						<div class="icon-box">
							<i class="lni-users"></i>
						</div>
						<p><a style="color: #3281a8" href="{{ path('app_register') }}">Créer un compte</a></p>
					</div>
				</div>
				<div class="col-lg-4 col-md-4 col-xs-12">
					<div class="works-item">
						<div class="icon-box">
							<i class="lni-bookmark-alt"></i>
						</div>
						<p><a style="color: #3281a8" href="{{ path('ajoutAnnonce') }}">Publier une annonce gratuite</a></p>
					</div>
				</div>
				<div class="col-lg-4 col-md-4 col-xs-12">
					<div class="works-item">
						<div class="icon-box">
							<i class="lni-thumbs-up"></i>
						</div>
						<p style="color: #3281a8">Affaire conclue</p>
					</div>
				</div>
				<hr class="works-line">
			</div>
		</div>
	</section>
	
	<section class="testimonial section-padding">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<div id="testimonials" class="owl-carousel">
						<div class="item">
							<div class="img-thumb">
								<img src="assets/img/testimonial/img1.png" alt="">
							</div>
							<div class="testimonial-item">
								<div class="content">
									<p class="description">Eiusmod tempor incidiunt labore velit dolore magna aliqu sed eniminim veniam quis nostrud exercition eullamco laborisaa, Eiusmod tempor incidiunt labore velit dolore magna.</p>
									<div class="info-text">
										<h2><a href="#">John Doe</a></h2>
										<h4><a href="#">Vendeur</a></h4>
									</div>
								</div>
							</div>
						</div>
						<div class="item">
							<div class="item">
								<div class="img-thumb">
									<img src="assets/img/testimonial/img2.png" alt="">
								</div>
								<div class="testimonial-item">
									<div class="content">
										<p class="description">Eiusmod tempor incidiunt labore velit dolore magna aliqu sed eniminim veniam quis nostrud exercition eullamco laborisaa, Eiusmod tempor incidiunt labore velit dolore magna.</p>
										<div class="info-text">
											<h2><a href="#">Lucile</a></h2>
											<h4><a href="#">Acheteuse</a></h4>
										</div>
									</div>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
